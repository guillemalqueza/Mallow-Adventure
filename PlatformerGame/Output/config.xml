<config>
  <app>
    <title>Game Development</title>
    <initialMaxFrameDuration value="16"/>
	<capMaxFrameDuration value="32"/>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1600" height="900" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>

  <scene>
    <map path="Assets/Maps/" name="MapTemplate.tmx"/>
    <player x="400" y="991" texturepath="Assets/Textures/player.png"/>
    <item x="704" y="632" texturepath="Assets/Textures/key.png"/>
    <!-- <jumper x="160" y="1019" texturepath="Assets/Textures/jumper.png"/> -->
    <!-- <crumblingPlatform x="600" y="850" texturepath="Assets/Textures/crumblingPlatform.png"/> -->
    <lockDoor x="3200" y="190" texturepath="Assets/Textures/lockDoor.png"/>
  </scene>
  
  <animations>
    <!-- Player Animations-->
    <idleAnim loop="true" speed="0.1f">
      <animation x="0" y="1216" w="100" h="64"/>
      <animation x="100" y="1216" w="100" h="64"/>
      <animation x="200" y="1216" w="100" h="64"/>
      <animation x="300" y="1216" w="100" h="64"/>
    </idleAnim>
    
    <jumpAnim loop="false" speed="0.2f">
      <animation x="0" y="1344" w="100" h="64"/>
      <animation x="100" y="1344" w="100" h="64"/>
      <animation x="200" y="1344" w="100" h="64"/>
      <animation x="300" y="1344" w="100" h="64"/>
      <animation x="400" y="1344" w="100" h="64"/>
      <animation x="500" y="1344" w="100" h="64"/>
      <animation x="0" y="1344" w="100" h="64"/>
    </jumpAnim>
    
    <walkAnim loop="true" speed="0.2f">
      <animation x="0" y="2176" w="100" h="64"/>
      <animation x="100" y="2176" w="100" h="64"/>
      <animation x="200" y="2176" w="100" h="64"/>
      <animation x="300" y="2176" w="100" h="64"/>
      <animation x="400" y="2176" w="100" h="64"/>
      <animation x="500" y="2176" w="100" h="64"/>
      <animation x="600" y="2176" w="100" h="64"/>
    </walkAnim>
    
    <crouchAnim loop="true" speed="0.1f">
      <animation x="0" y="256" w="100" h="64"/>
      <animation x="100" y="256" w="100" h="64"/>
      <animation x="200" y="256" w="100" h="64"/>
    </crouchAnim>
    
    <crouchWalkAnim loop="true" speed="0.1f">
      <animation x="0" y="512" w="100" h="64"/>
      <animation x="100" y="512" w="100" h="64"/>
      <animation x="200" y="512" w="100" h="64"/>
      <animation x="300" y="512" w="100" h="64"/>
    </crouchWalkAnim>
    
    <fallAnim loop="true" speed="0.1f">
      <animation x="0" y="896" w="100" h="64"/>
      <animation x="100" y="896" w="100" h="64"/>
      <animation x="200" y="896" w="100" h="64"/>
    </fallAnim>
    
    <wallAnim loop="true" speed="0.1f">
      <animation x="0" y="1024" w="100" h="64"/>
      <animation x="100" y="1024" w="100" h="64"/>
      <animation x="200" y="1024" w="100" h="64"/>
    </wallAnim>
    
    <deadAnim loop="false" speed="0.1f">
      <animation x="0" y="768" w="100" h="64"/>
      <animation x="100" y="768" w="100" h="64"/>
      <animation x="200" y="768" w="100" h="64"/>
      <animation x="300" y="768" w="100" h="64"/>
      <animation x="400" y="768" w="100" h="64"/>
    </deadAnim>

    <!-- Platform Animations-->
    <platformIdleAnim loop="false" speed="0.1f">
      <animation x="0" y="0" w="32" h="32"/>
    </platformIdleAnim>
    
    <platformBreakingAnim loop="true" speed="0.1f">
      <animation x="0" y="0" w="32" h="32"/>
      <animation x="32" y="0" w="32" h="32"/>
    </platformBreakingAnim>

    <!-- Key Animations-->
    <keyIdleAnim loop="true" speed="0.1f">
      <animation x="0" y="0" w="32" h="32"/>
      <animation x="32" y="0" w="32" h="32"/>
      <animation x="64" y="0" w="32" h="32"/>
      <animation x="96" y="0" w="32" h="32"/>
      <animation x="128" y="0" w="32" h="32"/>
      <animation x="160" y="0" w="32" h="32"/>
      <animation x="192" y="0" w="32" h="32"/>
      <animation x="224" y="0" w="32" h="32"/>
      <animation x="256" y="0" w="32" h="32"/>
      <animation x="288" y="0" w="32" h="32"/>
      <animation x="320" y="0" w="32" h="32"/>
      <animation x="352" y="0" w="32" h="32"/>
      <animation x="384" y="0" w="32" h="32"/>
      <animation x="416" y="0" w="32" h="32"/>
    </keyIdleAnim>

    <!-- Jumper Animations-->
    <jumperIdleAnim loop="false" speed="0.1f">
      <animation x="0" y="0" w="64" h="64"/>
    </jumperIdleAnim>
    
    <jumperAnim loop="false" speed="0.25f">
      <animation x="0" y="0" w="64" h="64"/>
      <animation x="64" y="0" w="64" h="64"/>
      <animation x="128" y="0" w="64" h="64"/>
      <animation x="192" y="0" w="64" h="64"/>
      <animation x="256" y="0" w="64" h="64"/>
      <animation x="320" y="0" w="64" h="64"/>
      <animation x="0" y="0" w="64" h="64"/>
    </jumperAnim>

    <!-- Door Animations-->
    <doorIdleAnim loop="false" speed="0.1f">
      <animation x="0" y="0" w="192" h="128"/>
    </doorIdleAnim>

    <doorOpenAnim loop="false" speed="0.2f">
      <animation x="0" y="0" w="192" h="128"/>
      <animation x="192" y="0" w="192" h="128"/>
      <animation x="384" y="0" w="192" h="128"/>
      <animation x="576" y="0" w="192" h="128"/>
      <animation x="768" y="0" w="192" h="128"/>
      <animation x="960" y="0" w="192" h="128"/>
      <animation x="1152" y="0" w="192" h="128"/>
      <animation x="1344" y="0" w="192" h="128"/>
      <animation x="1536" y="0" w="192" h="128"/>
      <animation x="0" y="128" w="192" h="128"/>
      <animation x="192" y="128" w="192" h="128"/>
      <animation x="384" y="128" w="192" h="128"/>
      <animation x="576" y="128" w="192" h="128"/>
      <animation x="768" y="128" w="192" h="128"/>
      <animation x="960" y="128" w="192" h="128"/>
      <animation x="1152" y="128" w="192" h="128"/>
      <animation x="1344" y="128" w="192" h="128"/>
      <animation x="1536" y="128" w="192" h="128"/>
      <animation x="0" y="0" w="0" h="0"/>
    </doorOpenAnim>

  </animations>
</config>

