    <player x="400" y="991" texturepath="Assets/Textures/player.png"/>
    <item x="704" y="632" texturepath="Assets/Textures/key.png"/>
    <jumper x="160" y="1019" texturepath="Assets/Textures/jumper.png"/>
    <crumblingPlatform x="600" y="850" texturepath="Assets/Textures/crumblingPlatform.png"/>
